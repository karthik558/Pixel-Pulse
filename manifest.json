{
  "manifest_version": 3,
  "name": "Pixel Pulse",
  "description": "Intelligently keeps chosen web sessions alive with subtle activity pulses on configured URLs.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pixel Pulse",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "scripting",
    "idle"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
